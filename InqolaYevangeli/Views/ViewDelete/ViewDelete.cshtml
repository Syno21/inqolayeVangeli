@model List<InqolaYevangeli.Models.Entities.Members.Member>

<div class="container mt-5">
    <h2 class="text-center text-success">View Members</h2>
    <hr />

    <div class="row mb-4">
        <div class="col-md-6">
            <label for="branchFilter" class="form-label">Filter by Branch:</label>
            <select id="branchFilter" class="form-select" onchange="location = this.value;">
                <option value="@Url.Action("ViewDelete", "ViewDelete")">All Branches</option>
                @foreach (var branch in ViewBag.Branches)
                {
                    <option value="@Url.Action("ViewDelete", "ViewDelete", new { branchId = branch.BranchID })">@branch.BranchName</option>
                }
            </select>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-success">
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Branch</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.MemberID</td>
                        <td>@member.FirstName</td>
                        <td>@member.LastName</td>
                        <td>@member.DateOfBirth.ToShortDateString()</td>
                        <td>@member.Gender</td>
                        <td>@member.BranchID</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Member Actions">
                                <a asp-controller="Member" asp-action="Edit" asp-route-id="@member.MemberID" class="btn btn-primary">Edit</a>
                                <a asp-controller="ViewDelete" asp-action="Delete" asp-route-id="@member.MemberID" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6 text-end">
        <a href="@Url.Action("AddMember", "Member")" class="btn btn-success">Add New Member</a>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    hr {
        border: 1px solid #FFA34D;
        margin-bottom: 40px;
    }

    .form-label {
        font-size: 1.1em;
        margin-bottom: 10px;
    }

    .form-select {
        padding: 10px;
        font-size: 1.1em;
        border: 1px solid #5585b5;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
        background-color: #4b519a;
        border-color: #5585b5;
        font-size: 1.1em;
        transition: background-color 0.3s, transform 0.3s;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 700px;
    }

    .btn-success:hover {
            background-color: #5585b5;
        transform: translateY(-2px);
    }

    .table-responsive {
        margin-top: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        padding: 1.5rem;
        vertical-align: middle;
        text-align: center;
    }

    .table thead th {
            background-color: #5585b5;
        color: #fff;
            border-color: #FFA34D;
    }

    .btn-primary, .btn-danger {
        font-size: 1.1em;
        transition: transform 0.3s;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-primary:hover, .btn-danger:hover {
        transform: translateY(-2px);
    }

    .btn-group .btn {
        margin-right: 5px;
    }

   
</style>
