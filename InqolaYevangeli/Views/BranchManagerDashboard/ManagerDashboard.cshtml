@model InqolaYevangeli.Models.ManagerDashboardViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InqolaYevangeli</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InqolaYevangeli.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f2f2f2;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #FF7C00;
        }

        .navbar-brand, .nav-link {
            color: #fff;
        }

        .card {
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #FF7C00;
            color: #fff;
        }

        .list-group-item {
            border: none;
            background-color: #f8f8f8;
        }

        .badge {
            background-color: #FFA34D;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InqolaYevangeli</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="BranchManagerDashboard" asp-action="ManagerDashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MemberManagement" asp-action="ManageMembers">Manage Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Activity" asp-action="ManageActivities">Manage Activities</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main id="content" role="main" class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">Branch Information</div>
                    <div class="card-body">
                        <p><strong>Branch Name:</strong> @ViewBag.BranchName</p>
                        <p><strong>Location:</strong> @ViewBag.Location</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">Member Counts by Age Group</div>
                    <div class="list-group list-group-flush">
                        @foreach (var item in ViewBag.MemberCounts)
                        {
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                @item.AgeGroup
                                <span class="badge badge-pill">@item.Count</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">Statistics</div>
                    <div class="card-body">
                        <p><strong>Members:</strong> @ViewBag.numberOfMembers</p>
                        <p><strong>Sealed Members:</strong> @ViewBag.SealedMembers</p>
                        <p><strong>Welcomed Members:</strong> @ViewBag.WelcomedMembers</p>
                        <p><strong>Testifiers:</strong> @ViewBag.Testifiers</p>
                        <p><strong>Number of Activities:</strong> @ViewBag.NumberOfActivities</p>
                        <p><strong>Attendance Rate:</strong> @ViewBag.AttendanceRate%</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>