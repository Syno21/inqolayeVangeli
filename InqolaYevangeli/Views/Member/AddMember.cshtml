@model InqolaYevangeli.Models.AddMemberViewModel
@{
    ViewBag.Title = "Add Member";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-orange text-white">
                    <h2 class="mb-0">Add Member</h2>
                </div>
                <div class="card-body">
                    <form method="post" class="form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label asp-for="FirstName" class="font-weight-bold">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="font-weight-bold">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="font-weight-bold">Date of Birth</label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="font-weight-bold">Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StatusID" class="font-weight-bold">Status</label>
                            <select asp-for="StatusID" class="form-control">
                                <option value="">Select Status</option>
                                @if (ViewBag.MembershipStatuses != null)
                                {
                                    foreach (var status in ViewBag.MembershipStatuses)
                                    {
                                        <option value="@status.StatusID">@status.StatusName</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="StatusID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BranchID" class="font-weight-bold">Branch</label>
                            <select asp-for="BranchID" class="form-control">
                                <option value="0">Select Branch</option>
                                @if (ViewBag.Branches != null)
                                {
                                    foreach (var branch in ViewBag.Branches)
                                    {
                                        <option value="@branch.BranchID">@branch.BranchName</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="BranchID" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-orange btn-block mt-4">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-orange {
        background-color: #FF7C00;
    }

    .btn-orange {
        background-color: #FFA34D;
        color: #fff;
    }

        .btn-orange:hover {
            background-color: #ff9933;
            color: #fff;
        }
</style>